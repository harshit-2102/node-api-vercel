<%- include('../partials/header'); -%>

    <div class="pb-3 mb-3 d-flex border-bottom container">
        <h4 class="m-0 p-0 me-1">All Users</h4>
        <h5 class="m-0 p-0"> (<%= usersCount %>)</h5>
    </div>
    <div class="container admin-user-table">

        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Username</th>
                    <th scope="col">Total Photos</th>
                    <th scope="col">Total Hastags</th>
                    <th scope="col">Total Worth</th>
                </tr>
            </thead>
            <tbody class="">
                <% for (let data of datas) { %>

                    <tr class="position-relative">
                        <th scope="row">
                            <a href="" class="stretched-link text-decoration-none text-dark fw-bold"><%= data.id %></a>
                        </th>
                        <td><%= data.user %></td>
                        <td><%= data.imageCount %></td>
                        <td><%= data.hashtagsCount %></td>
                        <td><%= data.totalSp %></td>
                    </tr>

                    <% } %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/footer'); -%>